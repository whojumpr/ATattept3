{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/healthcheck", "destination": "/api/server" },
    { "source": "/api/user", "destination": "/api/server" },
    { "source": "/api/login", "destination": "/api/server" },
    { "source": "/api/logout", "destination": "/api/server" },
    { "source": "/api/register", "destination": "/api/server" },
    { "source": "/api/trades/:path*", "destination": "/api/server" },
    { "source": "/api/journal/:path*", "destination": "/api/server" },
    { "source": "/api/metrics/:path*", "destination": "/api/server" },
    { "source": "/api/:path*", "destination": "/api/fallback" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}