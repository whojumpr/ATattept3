{
  "version": 2,
  "buildCommand": "node vercel-build.mjs",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "routes": [
    { "src": "/api/verify", "dest": "/api/verify.js" },
    { "src": "/api/healthcheck", "dest": "/api/server.js" },
    { "src": "/api/user", "dest": "/api/server.js" },
    { "src": "/api/login", "dest": "/api/server.js" },
    { "src": "/api/logout", "dest": "/api/server.js" },
    { "src": "/api/register", "dest": "/api/server.js" },
    { "src": "/api/trades(.*)", "dest": "/api/server.js" },
    { "src": "/api/journal(.*)", "dest": "/api/server.js" },
    { "src": "/api/metrics(.*)", "dest": "/api/server.js" },
    { "src": "/api/(.*)", "dest": "/api/fallback.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}