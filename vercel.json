{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/healthcheck", 
      "dest": "/api/server.js" 
    },
    { 
      "src": "/api/user", 
      "dest": "/api/server.js" 
    },
    { 
      "src": "/api/login", 
      "dest": "/api/server.js" 
    },
    { 
      "src": "/api/logout", 
      "dest": "/api/server.js" 
    },
    { 
      "src": "/api/register", 
      "dest": "/api/server.js" 
    },
    { 
      "src": "/api/trades(.*)", 
      "dest": "/api/server.js" 
    },
    { 
      "src": "/api/journal(.*)", 
      "dest": "/api/server.js" 
    },
    { 
      "src": "/api/metrics(.*)", 
      "dest": "/api/server.js" 
    },
    { 
      "src": "/api/(.*)", 
      "dest": "/api/fallback.js" 
    },
    { 
      "src": "/(.*\\.(js|css|png|jpg|svg|ico|json))",
      "dest": "/$1"
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}